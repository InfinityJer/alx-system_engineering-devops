#!/usr/bin/env bash
# Bash script that stops the 4-to_infinity_and_beyond process.
# Function to stop the 4-to_infinity_and_beyond process
stop_infinity_and_beyond() {
    # Find the PID of the 4-to_infinity_and_beyond process
    YOUR_4_TO_INFINITY_AND_BEYOND_PID=$(pgrep -f "4-to_infinity_and_beyond")

    # Check if the PID is valid
    if [[ -n "$YOUR_4_TO_INFINITY_AND_BEYOND_PID" ]]; then
        # Terminate the process
        echo "Stopping the 4-to_infinity_and_beyond process..."
        kill -15 "$YOUR_4_TO_INFINITY_AND_BEYOND_PID"
    else
        echo "4-to_infinity_and_beyond process not found!"
    fi
}
# Trap the SIGINT signal (Ctrl+C) and call the stop_infinity_and_beyond function
trap 'stop_infinity_and_beyond' SIGINT
# Infinite loop to keep the script running
while true; do
    echo "Waiting for the 4-to_infinity_and_beyond process to be stopped..."
    sleep 2
done
